type BoundedCache[K comparable, V any] struct {
    data map[K]V
    maxSize int
    mu   sync.RWMutex
}

func (c *BoundedCache[K, V]) Get(key K) (V, bool) {
    c.mu.RLock()
    defer c.mu.RUnlock()
    
    value, exists := c.data[key]
    return value, exists
}

func (c *BoundedCache[K, V]) Set(key K, value V) {
    c.mu.Lock()
    defer c.mu.Unlock()
    
